@model WebApplication.Models.Knife
@{
    ViewBag.Title = "Добавление ножа";
}
    <form asp-action="create" asp-controller="home">
        <div class="form-group">
            <label asp-for="Knife_Name" class="control-label">Название</label>
            <input type="text" asp-for="Knife_Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Knife_Info" class="control-label">Информация о ноже</label>
            <input type="text" asp-for="Knife_Info" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Knife_Cost" class="control-label">Цена</label>
            <input type="number" asp-for="Knife_Cost" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Knife_Description" class="control-label">Описание</label>
            <input type="text" asp-for="Knife_Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Knife_Characteristic" class="control-label">Характеристики</label>
            <input type="text" asp-for="Knife_Characteristic" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Knife_Brand" class="control-label">Бренд</label>
            <input type="text" asp-for="Knife_Brand" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </form>

